<%= simple_form_for [:admin, @product], :html=> { class: 'w-full max-w-lg' } do |f| %>
  <%= f.input :name, input_html: { class: 'form-input w-full mb-6' } %>
  <%= f.input :description, input_html: { class: 'form-input w-full mb-6' } %>
  <%= f.input :long_description, input_html: { class: 'form-input w-full mb-6' } %>
  <%= f.input :price, input_html: { class: 'form-input w-full mb-6' } %>
  <%= f.association :category, input_html: { class: 'form-input w-full mb-6' } %>
  <%= f.input :photo, input_html: { class: 'mb-6' } %>
  <%= f.submit class: "btn cursor-pointer" %>
<% end %>
