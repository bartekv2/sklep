<h2>Dostawa</h2>
<%= simple_form_for @cart, :html=> { id: 'cart-form', class: 'w-full max-w-lg' }, url: cart_path do |f| %>
    <%= f.simple_fields_for :address do |a| %>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= a.input :email %>
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <%= a.input :first_name %>
        </div>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <%= a.input :last_name %>
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <%= a.input :city %>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <%= a.input :zip_code %>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <%= a.input :street %>
        </div>
      </div>
      <% end %>
      <div class="relative mb-6">
        <%= f.association :shipping_type, as: :select, prompt: nil, input_html: { class: 'form-select' } %>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= f.input :comment %>
        </div>
      </div>
      <%= button_tag class: "btn mb-6" do %>
        Zapisz i przejd≈∫ dalej
        <span class="">>></span>
      <% end %>
<% end %>
