<% products.each_slice(3) do |slice| %>
  <div class="flex">
   <% slice.each do |product| %>
    <div class="w-1/3 pb-6">
      <%= link_to product_path(product) do %>
        <%= image_tag product.photo.url(:thumb), class: "w-64 h-48 rounded-lg shadow-xl" %>
      <% end %>
      <div class="caption">
        <h3><%= link_to product.name, product %></h3>
        <p><%= simple_format(product.description.truncate(90)) %></p>
        <p><%= number_to_currency product.price %></p>
        <p>
          <%= link_to add_product_cart_path(product_id: product.id), method: :post, class: "btn" do %>
           Buy Now
          <% end %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
